{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "strictNullChecks": true
  },
  "include": ["src", "src/middlewares", "src/helpers"],
  "exclude": ["node_modules", "dist"]
}
