datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id    Int     @id @default(autoincrement())
  name  String
  email String  @unique
  whatsapp String
  phone String
  adress Adress?
  

}
model Adress {
  id    Int     @id @default(autoincrement())
  cep String
  neighborhood String
  userId Int @unique
  user User @relation(fields: [userId], references: [id])
  cityId      Int @unique
  city        City   @relation(fields: [cityId], references: [id])

}
model City {
  id         Int       @id @default(autoincrement())
  name       String
  state      String
  latitude   String
  longitude  String 
  adress    Adress[] 
}



